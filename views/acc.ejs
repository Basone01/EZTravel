<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/style.css">
    <title>
        EZTravel
    </title>
    <style media="screen">
    body{
       background-image: url('/public/img/wallpaper.jpg');
       background-size:cover;
       background-repeat: no-repeat;
       background-attachment: fixed;
    }
    #map{
      width: 30rem;
      height: 25rem;
      border: 0.25em solid white;
      border-radius: 0.5em;
    }

    </style>
</head>

<body>
  <%-include('navbar')%>
  <section class="main-content" id="main-detail">
    <h1><%=accomodation.name%></h1>

    <div class="horizon" style="width:100%;margin-bottom:1rem;">

      <div class="acc-img grow-2" style="height:25rem;">
        <img src="<%=accomodation.imgurl%>" class="">
      </div>

      <div class="">

        <div id="map"></div>
      </div>
    </div>



    </div>
    <div class="acc-item">
      <div class="horizon">
        <div class="acc-img">
          <img src="<%=accomodation.imgurl%>" alt="">
        </div>
        <div class="acc-detail">
          <div class="">
            <h3>NAME : <%=accomodation.name%></h3>
          </div>
          <div class="">
            <h3>TYPE : <%=accomodation.type%></h3>
          </div>
          <div class="">
            <h3>GRADE :   <%var i=0%><% for(i; i<Math.floor(accomodation.rate); i++) { %>
                              <i class="fa fa-star"></i>
                          <% } %>
                          <%if((accomodation.rate-i)==0.5){%>
                            <i class="fa fa-star-half"></i>
                          <%}%>
            </h3>
          </div>

          <div class="horizon">
            <h3 class="noshrink pad">FACILITY :</h3>
            <div class="horizon wrap">
              <h3 class="inline noshrink pad"><%if(accomodation.facility.wifi){%>
                <i class="fa fa-2x fa-wifi"></i> WIFI
              <%}%></h3>
              <h3 class="inline noshrink pad"><%if(accomodation.facility.fitness){%>
                <i class="fa fa-2x fa-bicycle"></i> FITNESS
              <%}%></h3>
              <h3 class="inline noshrink pad"><%if(accomodation.facility.pool){%>
                <i class="fa fa-2x fa-tint"></i> SWIMMING POOL
              <%}%></h3>
              <h3 class="inline noshrink pad"><%if(accomodation.facility.restaurant){%>
                <i class="fa fa-2x fa-cutlery"></i> RESTAURANT
              <%}%></h3>
              <h3 class="inline noshrink pad"><%if(accomodation.facility.park){%>
                <i class="fa fa-2x fa-tree"></i> PARK
              <%}%></h3>
              <h3 class="inline noshrink pad"><%if(accomodation.facility.club){%>
                <i class="fa fa-2x fa-beer"></i> NIGHT CLUB
              <%}%></h3>
            </div>

          </div>
        </div>
      </div>

  </section>

    <script>

      function initMap() {
        var myLatLng = {lat: <%=accomodation.point.lat%>, lng: <%=accomodation.point.lng%>};

        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 19,
          center: myLatLng
        });

        var marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          title: 'Hello World!'
        });
      }
    </script>
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB6ViXb6gZdioSEemzn7opGP3Emj-PP9Ns&callback=initMap">
    </script>
    <script
    src="https://code.jquery.com/jquery-3.2.1.min.js"
    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
    crossorigin="anonymous">
  </script>

  </script>
  <script type="text/javascript" src="/styles/style.js">

  </script>
</body>

</html>
