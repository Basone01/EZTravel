<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="public/css/font-awesome.css"> -->
    <link rel="stylesheet" href="public/css/style.css">
    <title>
        EZTravel
    </title>
    <style media="screen">

    </style>
</head>

<body>

  <header id="home" class="main-content screen-height">
    <%-include('navbar')%>

    <h1 class="logo-color text-large text-centered"><span>EZ</span><span>Travel</span></h1>
    <div class="main-menubar">
      <a href="#quicktravel" class="a-link btn btn-menu btn-md space-around-sm">QUICK TRAVEL</a>
      <a href="#findyourplace" class="a-link btn btn-menu btn-md space-around-sm">FIND by DETAILS</a>
      <a href="#recommended" class="a-link btn btn-menu btn-md space-around-sm">RECOMMENDED</a>
    </div>
  </header>

  <section class="main-content screen-height" id="quicktravel">
    <div>
      <h1 class="logo-color text-large text-centered"><span>QUICK</span> <span>TRAVEL</span></h1>
    </div>
    <form class="full-form" action="">
      <input class="rounded-border" type="text" id="quicksearch" placeholder="'Name' or 'Province'">
      <a id="submitsearch" type="submit"><i class="fa fa-search">  </i></a>
    </form>
    <div id="quickresult"></div>
  </section>

  <section class="main-content screen-height" id="findyourplace">
    <div>
      <h1 class="logo-color text-large text-centered"><span>FIND</span> <span>YOUR PLACE</span></h1>
    </div>

    <form class="full-form" action="/search" method="get">
      <div class="form-block" >
        <div class="head"><h3>Filter</h3></div>
        <div class="form-box">
          <div class="col-1-3">
            <div class="form-block"  id="province">
              <div class="head"><h3>Province</h3></div>
              <div class="headingbox">
                <input type="text" class="province-select" name="province" list="provincelist" placeholder="Provinces">


              </div>
            </div>
            <div class="form-block"  id="Accomodation">
              <div class="head"><h3>Accomodation</h3></div>
              <div class="headingbox">
                <label ><input type="checkbox" name="accomodation" value="hotel"> HOTEL</label>
                <label ><input type="checkbox" name="accomodation" value="mansion"> MANSION</label>
                <label ><input type="checkbox" name="accomodation" value="resort"> RESORT</label>
                <label ><input type="checkbox" name="accomodation" value="house"> HOUSE</label>
              </div>
            </div>
          </div>

          <div class="col-1-3">
            <div class="form-block"  id="price">
              <div class="head"><h3>Price</h3></div>
              <div class="headingbox">
                <input  type="range" id="minprice" class="styled-range" min="200" max="20000" value="200" step="50" style="width:100%;">
                <div class="text-centered" style="display:block;">
                  <label class="inline"><input class="range-display rounded-border" id="minprice-display" type="number" name="minprice"
                    value="200" step="50" min="200" max="20000" style="width:4rem;text-indent:0.6rem;"> -</label>
                  <label class="inline"><input class="range-display rounded-border" id="maxprice-display" type="number" name="maxprice"
                    value="20000" step="50" min="200" max="20000" style="width:4rem;text-indent:0.6rem;"> Baht</label>
                </div>
                <input  type="range" id="maxprice" class="styled-range" min="200" max="20000" value="20000" step="50" style="width:100%;">


              </div>
            </div>
            <div class="form-block"  id="grade">
              <div class="head"><h3>Grade</h3></div>
              <div class="headingbox">
                <fieldset class="rating">
                  <input type="radio" id="star5-0" name="rating" value="5" /><label class="full" for="star5-0" title="5 stars"></label>
                  <input type="radio" id="star4-5" name="rating" value="4.5" /><label class="half" for="star4-5" title="4.5 stars"></label>
                  <input type="radio" id="star4-0" name="rating" value="4" /><label class="full" for="star4-0" title="4 stars"></label>
                  <input type="radio" id="star3-5" name="rating" value="3.5" /><label class="half" for="star3-5" title="3.5 stars"></label>
                  <input type="radio" id="star3-0" name="rating" value="3" /><label class="full" for="star3-0" title="3 stars"></label>
                  <input type="radio" id="star2-5" name="rating" value="2.5" /><label class="half" for="star2-5" title="2.5 stars"></label>
                  <input type="radio" id="star2-0" name="rating" value="2" /><label class="full" for="star2-0" title="2 stars"></label>
                  <input type="radio" id="star1-5" name="rating" value="1.5" /><label class="half" for="star1-5" title="1.5 stars"></label>
                  <input type="radio" id="star1-0" name="rating" value="1" /><label class="full" for="star1-0" title="1 star"></label>
                  <input type="radio" id="star0-5" name="rating" value="0.5" checked="checked"/><label class="half" for="star0-5" title="0.5 stars"></label>
              </fieldse>
              </div>
            </div>

          </div>

          <div class="col-1-3">
            <div class="form-block"  id="facility">
              <div class="head"><h3>Facility</h3></div>
              <div class="headingbox">
                <label><input type="checkbox" name="facility" value="wifi"> WIFI</label>
                <label><input type="checkbox" name="facility" value="fitness"> Fitness</label>
                <label><input type="checkbox" name="facility" value="pool"> Swimming Pool</label>
                <label><input type="checkbox" name="facility" value="restaurant"> Restaurant</label>
                <label><input type="checkbox" name="facility" value="park"> Park</label>
                <label><input type="checkbox" name="facility" value="club"> Night Club</label>
              </div>
            </div>

          </div>

        </div>
        <div id="form-submit">
          <button type="submit">GO!!</button>
        </div>
      </div>
    </form>
  </section>

  <section class="main-content screen-height" id="recommended">
    <div>
      <h1 class="logo-color text-large text-centered"><span>RECOMMENDED</span> <span>PLACE</span></h1>
    </div>
    <div class="gallery">
      <div class="gallery-1">
        <div class="gallery-item">
          <img src="<%=recommendedPlace[0].imgurl%>" alt="<%=recommendedPlace[0].name%>" class="gallery-img">
          <a href="<%=recommendedPlace[0].link%>" class="img-overlay"><h1><span><%=recommendedPlace[0].name%></span></h1></a>
        </div>
        <div class="gallery-item">
          <img src="<%=recommendedPlace[1].imgurl%>" alt="<%=recommendedPlace[1].name%>" class="gallery-img">
          <a href="<%=recommendedPlace[1].link%>" class="img-overlay"><h1><span><%=recommendedPlace[1].name%></span></h1></a>
        </div>
      </div>
      <div class="gallery-2">
        <div class="gallery-item">
          <img src="<%=recommendedPlace[2].imgurl%>" alt="<%=recommendedPlace[2].name%>" class="gallery-img">
          <a href="<%=recommendedPlace[2].link%>" class="img-overlay"><h1><span><%=recommendedPlace[2].name%></span></h1></a>
        </div>
        <div class="gallery-item">
          <img src="<%=recommendedPlace[3].imgurl%>" alt="<%=recommendedPlace[3].name%>" class="gallery-img">
          <a href="<%=recommendedPlace[3].link%>" class="img-overlay"><h1><span><%=recommendedPlace[3].name%></span></h1></a>
        </div>
        <div class="gallery-item">
          <img src="<%=recommendedPlace[4].imgurl%>" alt="<%=recommendedPlace[4].name%>" class="gallery-img">
          <a href="<%=recommendedPlace[4].link%>" class="img-overlay"><h1><span><%=recommendedPlace[4].name%></span></h1></a>
        </div>

      </div>
      <div class="gallery-3">
        <div class="gallery-item">
          <img src="<%=recommendedPlace[5].imgurl%>" alt="<%=recommendedPlace[5].name%>" class="gallery-img">
          <a href="<%=recommendedPlace[5].link%>" class="img-overlay"><h1><span><%=recommendedPlace[5].name%></span></h1></a>
        </div>
        <div class="gallery-item">
          <img src="<%=recommendedPlace[6].imgurl%>" alt="<%=recommendedPlace[6].name%>" class="gallery-img">
          <a href="<%=recommendedPlace[6].link%>" class="img-overlay"><h1><span><%=recommendedPlace[6].name%></span></h1></a>
        </div>
      </div>
    </div>
  </section>
  <%- include('footer') %>
  <script
    src="https://code.jquery.com/jquery-3.2.1.min.js"
    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
    crossorigin="anonymous">
  </script>
  <script type="text/javascript" src="styles/rangeslider.js">

  </script>
  <script type="text/javascript" src="styles/style.js">

  </script>
</body>

</html>
